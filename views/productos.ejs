<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body class="p-4">
  <h1>ðŸ“¦ Lista de Productos</h1>

  <!-- Formulario para agregar producto -->
  <h2>Agregar Producto</h2>
  <form action="/productos" method="POST">
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input type="text" class="form-control" id="nombre" name="nombre" required>
    </div>
    <div class="form-group">
      <label for="precio">Precio</label>
      <input type="number" class="form-control" id="precio" name="precio" required>
    </div>
    <div class="form-group">
      <label for="stock">Stock</label>
      <input type="number" class="form-control" id="stock" name="stock" required>
    </div>
    <button type="submit" class="btn btn-primary">Agregar Producto</button>
  </form>

  <!-- Tabla de productos existentes -->
  <h2 class="mt-5">Productos Existentes</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(function(producto) { %>
        <tr>
          <td><%= producto.nombre %></td>
          <td><%= producto.precio %></td>
          <td><%= producto.stock %></td>
          <td>
            <!-- Eliminar -->
            <form action="/productos/eliminar" method="POST" style="display:inline;">
              <input type="hidden" name="nombre" value="<%= producto.nombre %>">
              <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
            </form>

            <!-- Actualizar -->
            <form action="/productos/actualizar" method="POST" class="d-inline">
              <input type="hidden" name="nombre" value="<%= producto.nombre %>">
              <input type="number" name="precio" value="<%= producto.precio %>" class="form-control d-inline w-auto" required>
              <button type="submit" class="btn btn-sm btn-warning">Actualizar Precio</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <a href="/" class="btn btn-secondary">Volver al inicio</a>
</body>
</html>
